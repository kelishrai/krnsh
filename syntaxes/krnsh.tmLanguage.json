{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "KRNSH",
    "patterns": [
        {
            "include": "#body"
        }
    ],
    "repository": {
        "body": {
            "patterns": [
                {
                    "name": "krnsh.abbreviations",
                    "match": "\\b(?:ab|ad|al|bd|cl|di|eg|fo|ht|li|me|nt|op|de|pr|ps|qa|td|se|sn|st|vs|ti|ty|ou|er|rt|wg|sh|fg|pg|aka)\\s+"
                },
                {
                    "name": "krnsh.symbols",
                    "match": "<|>|\\^|=|/|\\\\|\\+|-|\\*|!|@|%|,|\\.|:|'|\\\"|`|\\$|\\|"
                },
                {
                    "name": "krnsh.digits",
                    "match": "\\d"
                },
                {
                    "name": "krnsh.variables",
                    "match": "\\b([a-z]+[X-ZA-C]|\\w+[-_][X-ZA-Cx-zA-C])\\b"
                },
                {
                    "name": "krnsh.links",
                    "match": "https?://\\S+"
                },
                {
                    "name": "krnsh.file-name",
                    "match": "(pgfn|nfn).*(\\.\\w+)\\b"
                },
                {
                    "name": "krnsh.checklist-done",
                    "match": "☑\\s.*"
                },
                {
                    "name": "krnsh.single-line-comments",
                    "match": "⫽\\s.*",
                    "captures": {
                        "0": {
                            "patterns": [
                                {
                                    "name": "krnsh.abbreviations",
                                    "match": "\\b(?:ab|ad|al|bd|cl|db|di|eg|fo|ht|li|me|nt|op|de|pr|ps|qa|td|se|sn|st|vs|ti|ty|ou|er|rt|wg|sh|fg|pg)\\b"
                                },
                                {
                                    "name": "krnsh.symbols",
                                    "match": "<|>|\\^|=|/|\\\\|\\+|-|\\*|!|@|%|,|\\.|:|'|\\\"|`"
                                },
                                {
                                    "name": "krnsh.variables",
                                    "match": "\\b\\w+(?:X|Y|Z|A|B|C|-X|-Y|-Z|-A|-B|-C|-x|-y|-z|-a|-b|-c|_x|_y|_z|_a|_b|_c)\\b"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.krnsh"
}
