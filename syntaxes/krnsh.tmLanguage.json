{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "KRNSH",
    "patterns": [
        { "include": "#abbreviation" },
        { "include": "#bold" },
        { "include": "#english" },
        { "include": "#file-name" },
        { "include": "#horizontal-rule" },
        { "include": "#link" },
        { "include": "#symbol" },
        { "include": "#term" },
        { "include": "#to-do" },
        { "include": "#variable" },
        {
            "name": "krnsh.comment",
            "match": "╎\\s.*",
            "captures": {
                "0": {
                    "patterns": [{ "include": "#abbreviation" }, { "include": "#bold" }, { "include": "#english" }, { "include": "#file-name" }, { "include": "#link" }, { "include": "#symbol" }, { "include": "#term" }, { "include": "#variable" }]
                }
            }
        },
        {
            "name": "krnsh.section-divider",
            "match": "⫽\\s.*",
            "captures": {
                "0": {
                    "patterns": [{ "include": "#abbreviation" }, { "include": "#bold" }, { "include": "#english" }, { "include": "#file-name" }, { "include": "#link" }, { "include": "#symbol" }, { "include": "#term" }, { "include": "#variable" }]
                }
            }
        }
    ],
    "repository": {
        "abbreviation": {
            "patterns": [
                {
                    "name": "krnsh.abbreviation",
                    "match": "\\b(?:ab|ad|al|bd|cl|di|eg|fo|ht|li|me|nt|op|de|pr|ps|qa|td|se|sn|st|vs|ti|ty|cou|vou|er|rt|wg|sh|fg|aka|ie|ng)\\b"
                }
            ]
        },
        "bold": {
            "patterns": [
                {
                    "name": "krnsh.bold",
                    "match": "‹(.*?)›",
                    "captures": {
                        "0": {
                            "patterns": [
                                {
                                    "name": "krnsh.bold.invisible",
                                    "match": "[‹›]"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "english": {
            "patterns": [
                {
                    "name": "krnsh.english",
                    "match": "\\b(?:with|and|either|or|neither|nor|when|now|where|here|because|thus|hence|so|then|likewise|similarly|however|but|although|while|whereas|otherwise|since)\\b"
                }
            ]
        },
        "file-name": {
            "patterns": [
                {
                    "name": "krnsh.file-name",
                    "match": "(fn|nfn|pgfn|mfn).*?(\\.\\w+)\\b"
                }
            ]
        },
        "horizontal-rule": {
            "patterns": [
                {
                    "name": "krnsh.horizontal-rule",
                    "match": "⸻"
                }
            ]
        },
        "link": {
            "patterns": [
                {
                    "name": "krnsh.link",
                    "match": "https?://\\S+"
                }
            ]
        },
        "symbol": {
            "patterns": [
                {
                    "name": "krnsh.symbol",
                    "match": "<|>|\\^|=|/|\\\\|\\+|-|—|_|\\*|!|@|%|,|\\.|\\?|:|'|\\\"|`|\\$|\\||•|#|σ|μ|∈|∪|∩|∅|∑|≠|π|∞|ε|←|↑|→|↓|↗|↖|↙|↘|↔|↕|⤡|⤢|⤣|⤤|⤥|⤦|↺|↻|⟲|⟳|⤧|⤨|⤩|⤪|⤫|⨉|⤬|⤭|⤮|⤯|⤰|⤱|⤲|⤴|⤵|⤶|⤷|⤸|⤹|⤺|⤻|⤾|⤿|α|λ|γ"
                }
            ]
        },
        "term": {
            "patterns": [
                {
                    "name": "krnsh.term",
                    "match": "⟮(.*?)⟯",
                    "captures": {
                        "0": {
                            "patterns": [
                                {
                                    "name": "krnsh.term.invisible",
                                    "match": "[⟮⟯]"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "to-do": {
            "patterns": [
                {
                    "name": "krnsh.to-do",
                    "match": "☑\\s.*"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "krnsh.variable",
                    "match": "〈(.*?)〉",
                    "captures": {
                        "0": {
                            "patterns": [
                                {
                                    "name": "krnsh.variable.invisible",
                                    "match": "[〈〉]"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.krnsh"
}
